<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <title>Register</title>
</head>

<body>
  <style>
    .container {
      width: 40%;
      margin-top: 9%;
      box-shadow: 0 3px 20px rgba(0, 0, 0, 0.289);
      padding: 50px;
    }
  </style>

  <!-- navbar -->

  <body id="page-top">

    <nav class="navbar navbar-expand-lg navbar-primary bg-white fixed-top" id="mainNav">

      <div class="container-fluid">
        <a class="navbar-brand" href="/">Rumahlaku</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-bs-toggle="collapse"
          data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
          aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="container1">
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
              <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">SELAMAT DATANG </a>
            </ul>
          </div>
        </div>
      </div>
      </div>
    </nav>
    </nav>


    <!-- Register -->
    <div class="container justify-content-center" style="background-color:white">
      <h3 class="text-center">Register</h3>
      <hr>
      <form id="register-form">
        <label>Username</label>
        <br>
        <input type="text" name="username" id="inputUsername" class="form-control" placeholder="Username">
        <br>
        <label>Email</label>
        <br>
        <input type="text" name="email" id="inputEmail" class="form-control" placeholder="Email address">
        <br>
        <label>Password</label>
        <br>
        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Your Password">
        <br>
        <label>phone</label>
        <br>
        <input type="nomer" name="No.Telepon" id="inputTelepon" class="form-control"
          placeholder="+62">
        <br>
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
        <button class="btn btn-primary btn-block" type="sumbit">Register</button>
        <% if(info.lenght> 0){ %>
          <div class="alert alert-danger" role="alert">
            <%= info %>
          </div>
          <% } %>
            <p>doesn't have account <a href="/login">click here</a></p>
      </form>
    </div>

    <script type="text/javascript">
      const API_URL = `http://localhost:3000/api/index`
      $(document).ready(function () {
        regis();
      });
      const regis = () => {
        $('#register-form').on('submit', (e) => {
          e.preventDefault();
          let username = $('#inputUsername').val();
          let email = $('#inputEmail').val();
          let password = $('#inputPassword').val();
          let Telepon = $('#inputTelepon').val();
          $.ajax({
            url: `${API_URL}/register`,
            method: 'POST',
            data: {
              username: username,
              email: email,
              password: password,
             Telepon:Telepon
            }
          }).done(function (data) {
            if (data.msg == 'success') {
              window.location.href = "/login"
            } else {
              alert('gagal')
            }
          }).fail(function (jqXHR, textStatus) {
            alert("Request failed get data: " + textStatus);
          })
        })
      }
    </script>
  </body>

</html>